<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.AppU1_SNL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/screenBackground</item>
        <item name="colorSurface">@color/screenBackground2</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorOnPrimary">@color/toolbarIconColor</item>
        <item name="colorOnBackground">@color/textColorPrimary</item>
    </style>

    <style name="Theme.AppU1_SNL" parent="Base.Theme.AppU1_SNL" />

    <style name="Widget.USAT.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.USAT.TextInputLayout.HintText</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.USAT.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.USAT.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.USAT.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.USAT.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Theme.USAT.Autumn" parent="Theme.AppU1_SNL">
        <item name="colorPrimary">#FFCF44</item>
        <item name="colorPrimaryDark">#FD9725</item>
        <item name="colorAccent">#FD9725</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorError">#FD9725</item>
    </style>
    <style name="Widget.USAT.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">?theme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>